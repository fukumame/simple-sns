- if current_user.already_favorite_post?(post)
  = link_to 'Unlike', unlike_post_path(post), remote: true, class: 'btn btn-default feed-index__like-button'
- else
  = link_to 'Like', like_post_path(post), remote: true, class: 'btn btn-default feed-index__like-button'
.feed-index__like-count
  = post.favorites.size