- if current_user.already_favorite_reply?(reply)
  = link_to 'Unlike', unlike_reply_path(reply), remote: true, class: 'btn btn-default reply__like-button'
- else
  = link_to 'Like', like_reply_path(reply), remote: true, class: 'btn btn-default reply__like-button'
.reply__like-count
  = reply.favorites.size